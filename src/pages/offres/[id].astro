---
import { getOffre } from "../../js/backend.mjs";
import Layout from "../../layouts/Layout.astro";

const { id } = Astro.params;
const offre = await getOffre(id);
---

<Layout titre={offre.nomMaison}>
    <section class="bg-gray-50 py-16">
        <div class="max-w-4xl mx-auto px-6">
            <!-- Card principale -->
            <div
                class="bg-white rounded-2xl shadow-lg border border-amber-200 p-8"
            >
                <!-- Titre -->
                <h1 class="text-3xl md:text-4xl font-bold text-red-800 mb-6">
                    {offre.nomMaison}
                </h1>

                <!-- Infos -->
                <div class="grid sm:grid-cols-2 gap-6">
                    <div
                        class="bg-amber-50 rounded-xl p-4 border border-amber-200"
                    >
                        <p class="text-sm text-gray-500 mb-1">Adresse</p>
                        <p class="text-lg font-semibold text-gray-800">
                            {offre.adresse}
                        </p>
                    </div>

                    <div
                        class="bg-amber-50 rounded-xl p-4 border border-amber-200"
                    >
                        <p class="text-sm text-gray-500 mb-1">Surface</p>
                        <p class="text-lg font-semibold text-gray-800">
                            {offre.surface} mÂ²
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
